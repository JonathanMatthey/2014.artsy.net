@import 'common'

for n in 1 2 3
  #introduction-headline-{n}
    opacity 0

for n in 1 2
  #introduction-credit-{n}
    opacity 0

.intro-chevron
  position absolute
  width (unit * 2)
  bottom @width
  left 50%
  height @width
  margin-left -(@width / 2)
  z-index 1
  border 2px solid white
  border-width 0 2px 2px 0
  transform rotate(45deg)
