@import 'common'

body.is-mobile
  overflow-y scroll
  overflow-x hidden
  user-select none

#mobile
.panes
  height 100%

.panes
  white-space nowrap
  font-size 0
  vertical-align top

.pane
  position relative
  display inline-block
  width 100%
  height 100%
  vertical-align top
  white-space normal
  padding 10%

.pane--backdrop
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-size cover
  z-index -1
  gradient-overlay()

.pane--vcenter
.pane--vcenter-wrap
  width 100%
  height 100%
.pane--vcenter
  display table
.pane--vcenter-wrap
  display table-cell
  vertical-align middle

.pane--headline
  font-size (headline-size / 1.5)

.pane--logo
  display inline-block
  height (unit * 2)
  margin-bottom (unit * 2)

.pane--chevron
  position absolute
  width (unit * 2)
  top 50%
  right @width
  height @width
  margin-top -(@width / 2)
  z-index 1
  border 2px solid white
  border-width 2px 2px 0 0
  transform rotate(45deg)
