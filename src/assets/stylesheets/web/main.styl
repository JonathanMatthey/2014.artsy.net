@import 'common'

.bisected-columns
  translate-center()
  width 100%
.bisected-columns--column
  float left
  width 50%
  &:first-child
    text-align right

.bisected-columns--image
  position relative
  width 100%
  height 300px
  margin (unit / 2) 0
  padding 0 (unit / 4)
  > img
    max-width 100%
    max-height 100%
    background-color gray-color

.gradient-overlay
  gradient-overlay()

.anchor-bl
  position absolute
  bottom 0
  left 0
.anchor-br
  position absolute
  bottom 0
  right 0

.categories
  position absolute
  width 50%
  top 0
  right 0
  bottom 0
.category
  block-margins(unit * 2)
.category-name
  margin-bottom (unit / 2)
  margin-left -(unit)
  avant-garde()
  font-size 13px
.category-images
  white-space nowrap
.category-image
  display inline-block
  height 200px
  inline-block-margins(unit / 4)
  > img
    max-height 100%
    max-width 100%

.artwork-columns
  translate-center()
  width 100%
  gradient-overlay()
.artwork-column
  float left
  width 25%
  &:last-child
    margin-right 0
.artwork
  display block
  margin unit (unit / 2)
  > img
    max-width 100%

.image-wrap
  display inline-block
  position relative
  &:after
    display block
    content ''
    border 1px solid rgba(white, 0.0625)
    occupy()

.image-wrap--image
  max-width 100%
  max-height 100%
  background-color gray-color

.image-wall
  float right
  width grid-span(3)
  margin-right grid-offset
  font-size 0
.image-wall--image
  display inline-block
  width 50%
  > img
    max-width 100%
    max-height 100%

.video-wall
  float right
  width grid-span(3)
  margin-right grid-offset
  video
  img
    width 100%

.map
  position absolute
  position absolute
  top (grid-offset / 2)
  right grid-offset
  bottom (grid-offset / 2)
  left grid-offset
  background-color gray-color
