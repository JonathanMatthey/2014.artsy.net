@import 'common'

for n in 1 2 3
  #caption-{n}
    opacity 0

.intro-chevron
  position absolute
  width (unit * 2)
  bottom @width
  left 50%
  height @width
  margin-left -(@width / 2)
  z-index 1
  border 2px solid white
  border-width 0 2px 2px 0
  transform rotate(45deg)

.frame--backdrop
  occupy()
  gradient-overlay()
  > img
    display block
    position absolute
    top 50%
    left 50%
