@import 'common'

.frame
  position fixed
  width 100%
  height 100%
  background-color black

.frame--body
  position absolute
  top (grid-offset / 2)
  right grid-offset
  bottom (grid-offset / 2)
  left grid-offset

.frame--vcenter
  position absolute
  top 50%
  width 100%
.frame--vcenter-wrap
  transform translateY(-50%)

.frame--layer
  occupy()

.frame--centering-context
  translate-center()

.frame--vertical-centering-context
  translate-v-center()

.frame--credit
  position absolute
  bottom (unit * 2)
  left 0
  width grid-span(2)
  opacity 0
  font-size credit-size

.frame--caption
  font-size caption-size

.frame--headline
  margin-bottom unit
  font-size headline-size

.frame--description
  font-size description-size
  line-height 1.4

.frame--backdrop
  occupy()
  gradient-overlay()
  > img
    display block
    position absolute
    top 50%
    left 50%
    opacity 0
    &.is-ready
      opacity 1
