- sections = locals.copy.web.sections

mixin frame(id, span)
  - frame = sections[id]
  - span = span || 2

  .frame( id="frame-#{id}" )
    block

    .frame--body
      .frame--vcenter: .frame--vcenter-wrap
        if frame.headline
          .frame--headline( class="span-#{span}" )
            != frame.headline
        if frame.description
          .frame--description( class="span-#{span}" )
            != frame.description

