- sections = locals.copy.web.sections

mixin frame(id, span)
  - frame = sections[id]
  - span = span || 2

  .frame( id="frame-#{id}" )
    block

    .frame--body
      .frame--vcenter: .frame--vcenter-wrap
        if frame.headline
          .frame--headline( class="span-#{span}" )
            != frame.headline
        if frame.description
          .frame--description( class="span-#{span}" )
            != frame.description

+frame('galleries-and-museums-shared')
  #galleries-and-museums-shared--columns.frame--layer.gradient-overlay: .bisected-columns
    #galleries-and-museums-shared--column-0.bisected-columns--column
      .bisected-columns--image: img( src= imagePath(frame.images[0], '600x350') )
      .bisected-columns--image: img( src= imagePath(frame.images[1], '600x350') )
    #galleries-and-museums-shared--column-1.bisected-columns--column
      .bisected-columns--image: img( src= imagePath(frame.images[2], '600x350') )
      .bisected-columns--image: img( src= imagePath(frame.images[3], '600x350') )

+frame('galleries-uploaded-graph')
  include graph

+frame('introductions-made-graph')
  include graph

+frame('museums-and-institutions')
  .frame--backdrop( id="museums-and-institutions-backdrop" )
    img( src= imagePath(frame.backdrop, '1920') )

+frame('educational-database', 3)
  include columns

+frame('added-categories')
