+frame('benefit-auctions-raised')
  #benefit-auctions-raised--columns.frame--layer.gradient-overlay: .bisected-columns
    #benefit-auctions-raised--column-0.bisected-columns--column
      .bisected-columns--image: .anchor-br: img( src= imagePath(frame.images[0], '350w') )
      .bisected-columns--image: img( src= imagePath(frame.images[1], '350w') )
    #benefit-auctions-raised--column-1.bisected-columns--column
      .bisected-columns--image: img( src= imagePath(frame.images[2], '350w') )
      .bisected-columns--image: img( src= imagePath(frame.images[3], '350w') )

+frame('powered-by-artsy')
  #powered-by-artsy--columns.frame--layer.gradient-overlay: .bisected-columns
    #powered-by-artsy--column-0.bisected-columns--column
      .bisected-columns--image: img( src= imagePath(frame.images[0], '960') )
    #powered-by-artsy--column-1.bisected-columns--column
      .bisected-columns--image: img( src= imagePath(frame.images[1], '960') )

+frame('browse-and-collect-fairs')
  .gradient-overlay: .frame--centering-context.span-full
    #browse-and-collect-fairs--image-wall.image-wall
      for image, i in frame.images
        .image-wall--image( id="image-wall--image-#{i}" )
          img( src= imagePath(frame.images[i], '600x350') )

+frame('mobile-app')
  .gradient-overlay: .frame--centering-context.span-full
    #mobile-app--video-wall.video-wall
      video( src= assetsPath(frame.video.files.mp4), autoplay, loop )
        img( src= imagePath(frame.video.cover, '960') )

