@import 'common'

dot-size = (unit / 3)

.progress
  position absolute
  right unit
  bottom 5%
  left unit
  height dot-size
  font-size 0
  line-height unit
  z-index z-progress
  text-align center
  transform translate3d(0, 0, 0)

.progress--dot
  display inline-block
  width dot-size
  height dot-size
  background-color white
  border-radius 50%
  margin 0 (unit / 6)
  opacity 0.5
  &.is-active
    opacity 1
