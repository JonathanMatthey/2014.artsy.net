@import 'nib'

// Units
base-unit = 20px
unit = base-unit

// Z-map
z-header = 100

// Colors
gray-color = #666
purple-color = #6a0bc1

// Mixins
antialiased()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

avant-garde()
  font-family 'ITC Avant Garde Gothic W04', 'Avant Garde', sans-serif
  text-transform uppercase
  letter-spacing 2px
  antialiased()

garamond()
  font-family 'Adobe Garamond W08', 'Garamond', serif
  antialiased()

backdrop(url)
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background black url(url) center center repeat

block-margins(margin-size = 20px)
  margin margin-size 0
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0
