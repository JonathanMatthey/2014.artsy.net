@import 'common'

.bisected-columns
  translate-center()
  width 100%
.bisected-columns--column
  float left
  width 50%
  &:first-child
    text-align right

.bisected-columns--image
  width 100%
  height 300px
  margin (unit / 2) 0
  padding 0 (unit / 4)
  > img
    max-width 100%
    max-height 100%
    background-color gray-color

.graph
  position relative
  width 400px
.graph--key
  position absolute
  top 0
  right 0
  bottom 0
  left 0
.graph--overlay
  position absolute
  top 0
  right 0
  bottom (unit * 2)
  width 100%
  background linear-gradient(left, transparent, 5% black)

.graph--caption
  position absolute
  bottom grid-offset
  right grid-offset
  width grid-span(1)
  font-size caption-size
  padding-right grid-offset
  translate-v-center()

.categories
  position absolute
  width 50%
  top 0
  right 0
  bottom 0
.category
  overflow hidden
  block-margins(unit / 4)
.category-name
  margin-bottom (unit / 2)
  avant-garde()
  font-size 13px
.category-images
  white-space nowrap
.category-image
  display inline-block
  background-color gray-color
  width 250px
  height 150px
  inline-block-margins(unit / 4)

.artwork-columns
  translate-center()
  width 100%
  gradient-overlay()
.artwork-column
  float left
  width 25%
  &:last-child
    margin-right 0
.artwork
  display block
  margin unit (unit / 2)
  > img
    max-width 100%

.image-wrap
  display inline-block
  position relative
  &:after
    display block
    content ''
    border 1px solid rgba(white, 0.0625)
    occupy()

.image-wrap--image
  max-width 100%
  max-height 100%
  background-color gray-color

.image-wall
  float right
  width grid-span(3)
  margin-right grid-offset
  font-size 0
.image-wall--image
  display inline-block
  width 50%
  > img
    max-width 100%
    max-height 100%

.video-wall
  float right
  width grid-span(3)
  height 400px
  margin-right grid-offset
  background-color gray-color

.map
  position absolute
  position absolute
  top (grid-offset / 2)
  right grid-offset
  bottom (grid-offset / 2)
  left grid-offset
  background-color gray-color
